//1.Get all countries from asia 
// 2. Get all countries with population less tha 2 lakhs
// 3. Print countries which uses USD
// 4. Print the sum of total population of all countries

var request=new XMLHttpRequest();
request.open('GET','https://restcountries.eu/rest/v2/all',true);
request.send();
request.onload=function(){
    var data=JSON.parse(this.response);

    //1.Getting all countries from asia 

    let casia=data.filter((ele)=>ele.region==="Asia");
    console.log(casia);

    // 2. Getting all countries with population less tha 2 lakhs

    let cpop=data.filter((ele)=>ele.population<200000);
    console.log(cpop);

    // 3. Print countries which uses USD
    
    let usd=data.filter((cntry)=>{
        for(var i in cntry.currencies){
            if(cntry.currencies[i].code==="USD"){
                return true;
            }
        }
    });
    console.log(usd);

    // 4. Print the sum of total population of all countries

    let total=data.reduce((sum,crnt)=>sum+crnt.population,0);
    console.log(total);
}
